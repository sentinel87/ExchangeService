<Window x:Class="ExchangeMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExchangeMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Name="btnSend" Content="Send" Width="100" Height="50" FontWeight="Bold" Click="BtnSend_Click">
            
        </Button>
        <Button Name="btnStop" Content="Stop" Width="100" Height="50" FontWeight="Bold" Click="BtnStop_Click">
            
        </Button>
    </StackPanel>
</Window>
